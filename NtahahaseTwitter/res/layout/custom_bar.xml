<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/bar_home"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="?attr/actionBarItemBackground"
        android:contentDescription="@string/cDesc_tab_home"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tab_home" />

    <ImageButton
        android:id="@+id/bar_settings"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="?attr/actionBarItemBackground"
        android:contentDescription="@string/cDesc_tab_settings"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tab_refresh" />

</RelativeLayout>